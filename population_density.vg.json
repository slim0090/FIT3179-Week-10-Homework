{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/slim0090/FIT3179_Week9_Homework/main/data/world_population.csv"
    },
    "params": [
      {
        "name": "Density_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 1000,
          "step": 10,
          "name": "Minimum Density: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Population > 0"},
      {"filter": "datum.Area > 0"},
      {"filter": "datum.Density > Density_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Population",
        "type": "quantitative",
        "axis": {"tickCount": 8},
        "scale": {"type": "log", "domain": [1, 10000000000]}
      },
      "y": {
        "field": "Area",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 100000000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Density",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [50, 100, 300, 500, 1000, 10000],
              "range": [10, 50, 100, 150, 300, 450, 600]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "Area", "type": "quantitative", "format": ","},
            {"field": "Density", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Macau' || datum['Country'] == 'Australia' || datum['Country'] == 'Monaco' || datum['Country'] == 'Singapore' || datum['Country'] == 'Greenland' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Population", "type": "quantitative", "format": ","},
            {"field": "Area", "type": "quantitative", "format": ","},
            {"field": "Density", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }
